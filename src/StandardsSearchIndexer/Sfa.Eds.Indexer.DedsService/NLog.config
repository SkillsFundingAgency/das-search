<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Debug" internalLogFile="c:\temp\sfa\nlog-indexer-internal.log" >
  
  <extensions>
    <add assembly="NLog.Targets.ElasticSearch"/>
    <add assembly="Microsoft.ApplicationInsights.NLogTarget" />
  </extensions>
  
  <variable name="application" value="Sfa.Indexer"/>
  
  <targets>
    <target xsi:type="File" name="f" fileName="${basedir}/logs/${shortdate}.log"
        layout="${longdate} - ${uppercase:${level}} ${message}" />
    <target xsi:type="Debugger" name="debug"/>

    <target name="elastic" xsi:type="BufferingWrapper" flushTimeout="5000">
      <target xsi:type="ElasticSearch" uri="http://127.0.0.1:9200" layout="${application}|${logger}|${uppercase:${level}}|${message}" />
    </target>

    <target name="ai" xsi:type="ApplicationInsightsTarget" />
  </targets>

  <rules>
    <logger name="*" minlevel="Debug" writeTo="f,debug,elastic,ai" />
  </rules>
</nlog>